@model Repository_Layer.Entity.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Product</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Product Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.Category</span></dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8" class="text-success">$@Model.Price.ToString("F2")</dd>

                    <dt class="col-sm-4">Stock Quantity:</dt>
                    <dd class="col-sm-8">@Model.StockQuantity units</dd>

                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn">
                             Go Back
                        </a>
                        <button type="submit" class="btn">
                            Delete Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
