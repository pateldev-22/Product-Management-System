@model Repository_Layer.Entity.Product


@{
    ViewData["Title"] = "Delete Product";
}


<h2>Delete Product</h2>


<h3>Are you sure you want to delete this product?</h3>


<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>


            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>


            <dt class="col-sm-3">Stock Quantity</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>
        </dl>
    </div>
</div>


<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
