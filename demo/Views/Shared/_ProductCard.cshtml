@model Repository_Layer.Entity.Product

<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Category</h6>
            <p class="card-text">
                <strong class="text-success">$@Model.Price.ToString("F2")</strong>
            </p>
            <p class="card-text">
                <small class="text-muted">Stock: @Model.StockQuantity units</small>
            </p>
            <p class="card-text">
                <small class="text-muted">Added: @Model.CreatedAt.ToString("MMM dd, yyyy")</small>
            </p>
        </div>
        <div class="card-footer bg-transparent">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div>
